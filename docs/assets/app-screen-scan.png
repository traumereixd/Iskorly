<svg width="300" height="600" viewBox="0 0 300 600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <style>
      .screen-text { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; }
    </style>
  </defs>
  
  <!-- Phone frame -->
  <rect width="300" height="600" rx="20" fill="#1a1a1a"/>
  <rect x="10" y="10" width="280" height="580" rx="15" fill="#f5f5f5"/>
  
  <!-- Status bar -->
  <rect x="10" y="10" width="280" height="30" rx="15" fill="#5f432c"/>
  <text x="150" y="30" class="screen-text" font-size="12" fill="#fff" text-anchor="middle">9:41 AM</text>
  
  <!-- App header -->
  <rect x="10" y="45" width="280" height="50" fill="#fff"/>
  <text x="150" y="75" class="screen-text" font-size="18" font-weight="700" fill="#5f432c" text-anchor="middle">Scan Answer Sheet</text>
  
  <!-- Camera preview area -->
  <rect x="30" y="110" width="240" height="320" rx="8" fill="#e0e0e0" stroke="#5f432c" stroke-width="3"/>
  
  <!-- Viewfinder guides -->
  <line x1="40" y1="120" x2="70" y2="120" stroke="#5f432c" stroke-width="3" stroke-linecap="round"/>
  <line x1="40" y1="120" x2="40" y2="150" stroke="#5f432c" stroke-width="3" stroke-linecap="round"/>
  
  <line x1="260" y1="120" x2="230" y2="120" stroke="#5f432c" stroke-width="3" stroke-linecap="round"/>
  <line x1="260" y1="120" x2="260" y2="150" stroke="#5f432c" stroke-width="3" stroke-linecap="round"/>
  
  <line x1="40" y1="420" x2="70" y2="420" stroke="#5f432c" stroke-width="3" stroke-linecap="round"/>
  <line x1="40" y1="420" x2="40" y2="390" stroke="#5f432c" stroke-width="3" stroke-linecap="round"/>
  
  <line x1="260" y1="420" x2="230" y2="420" stroke="#5f432c" stroke-width="3" stroke-linecap="round"/>
  <line x1="260" y1="420" x2="260" y2="390" stroke="#5f432c" stroke-width="3" stroke-linecap="round"/>
  
  <!-- Mock answer sheet in preview -->
  <rect x="80" y="180" width="140" height="200" rx="4" fill="#fff"/>
  <g transform="translate(90, 200)">
    <text class="screen-text" font-size="10" fill="#333">1. A    11. B    21. C</text>
    <text y="20" class="screen-text" font-size="10" fill="#333">2. B    12. C    22. A</text>
    <text y="40" class="screen-text" font-size="10" fill="#333">3. C    13. A    23. B</text>
    <text y="60" class="screen-text" font-size="10" fill="#333">4. D    14. D    24. D</text>
    <text y="80" class="screen-text" font-size="10" fill="#333">5. A    15. B    25. A</text>
    <text y="100" class="screen-text" font-size="10" fill="#333">6. B    16. C</text>
    <text y="120" class="screen-text" font-size="10" fill="#333">7. C    17. A</text>
    <text y="140" class="screen-text" font-size="10" fill="#333">8. A    18. B</text>
  </g>
  
  <!-- Instruction text -->
  <text x="150" y="455" class="screen-text" font-size="14" fill="#5f432c" text-anchor="middle">Position answer sheet in frame</text>
  
  <!-- Capture button -->
  <circle cx="150" cy="510" r="35" fill="#5f432c"/>
  <circle cx="150" cy="510" r="30" fill="#fff"/>
  <circle cx="150" cy="510" r="25" fill="#5f432c"/>
  
  <!-- Secondary buttons -->
  <rect x="40" y="490" width="60" height="40" rx="8" fill="#fff" stroke="#5f432c" stroke-width="2"/>
  <text x="70" y="515" class="screen-text" font-size="12" font-weight="600" fill="#5f432c" text-anchor="middle">Import</text>
  
  <rect x="200" y="490" width="60" height="40" rx="8" fill="#fff" stroke="#5f432c" stroke-width="2"/>
  <text x="230" y="515" class="screen-text" font-size="12" font-weight="600" fill="#5f432c" text-anchor="middle">Flash</text>
</svg>
