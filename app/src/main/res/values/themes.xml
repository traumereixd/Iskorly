<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Iskorly UX 2.0 Theme -->
    <style name="Theme.Iskorly" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/brand_brown</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_variant</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_emerald</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_variant</item>

        <!-- Surface / background -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_elevated</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <item name="colorOutline">@color/outline</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>

        <!-- Typography (downloadable font) -->
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <!-- Splash variant -->
    <style name="Theme.Iskorly.Splash" parent="Theme.Iskorly">
        <item name="android:windowBackground">@color/primary_indigo</item>
        <item name="android:statusBarColor">@color/primary_indigo</item>
    </style>

    <!-- Optional: Theme for cropper activity WITH action bar (rotation/flip menu) -->
    <style name="Theme.Iskorly.Cropper" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary_indigo</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <!-- Legacy alias -->
    <style name="Theme.ItemScoreAnalysis" parent="Theme.Iskorly" />
</resources>