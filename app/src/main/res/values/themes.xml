<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Iskorly UX 2.0 Theme -->
    <style name="Theme.Iskorly" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_indigo</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_variant</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_emerald</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_variant</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_elevated</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- Outline and background -->
        <item name="colorOutline">@color/outline</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        
        <!-- Typography -->
        <item name="fontFamily">@font/inter</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>
    
    <!-- Splash theme for instant startup (Android 12+) -->
    <style name="Theme.Iskorly.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_indigo</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_iskorly_mark</item>
        <item name="postSplashScreenTheme">@style/Theme.Iskorly</item>
    </style>
    
    <!-- Legacy alias for backward compatibility -->
    <style name="Theme.ItemScoreAnalysis" parent="Theme.Iskorly" />
</resources>