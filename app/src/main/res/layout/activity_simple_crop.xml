<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <!-- Main CropImageView from CanHub -->
    <com.canhub.cropper.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cropControlsContainer" />

    <!-- Bottom controls container -->
    <LinearLayout
        android:id="@+id/cropControlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorSurface"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Rotation angle and aspect ratio row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <!-- Rotation angle indicator -->
            <TextView
                android:id="@+id/rotationAngleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0°"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Aspect ratio presets -->
            <LinearLayout
                android:id="@+id/aspectRatioContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/aspectRatioFree"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Free"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/aspectRatio4_3"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="4:3"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/aspectRatio1_1"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="1:1"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Rotate Left -->
            <ImageButton
                android:id="@+id/rotateLeftButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:background="@drawable/crop_action_bg"
                android:contentDescription="@string/crop_rotate_left"
                android:src="@drawable/ic_crop_rotate_left" />

            <!-- Rotate Right -->
            <ImageButton
                android:id="@+id/rotateRightButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:background="@drawable/crop_action_bg"
                android:contentDescription="@string/crop_rotate_right"
                android:src="@drawable/ic_crop_rotate_right" />

            <!-- Flip Horizontal -->
            <ImageButton
                android:id="@+id/flipHorizontalButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:background="@drawable/crop_action_bg"
                android:contentDescription="@string/crop_flip_horizontal"
                android:src="@drawable/ic_crop_flip" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Cancel -->
            <ImageButton
                android:id="@+id/cancelButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:background="@drawable/crop_action_bg"
                android:contentDescription="@string/crop_cancel"
                android:src="@drawable/ic_crop_cancel" />

            <!-- Confirm -->
            <ImageButton
                android:id="@+id/confirmButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:background="@drawable/crop_action_bg"
                android:contentDescription="@string/crop_confirm"
                android:src="@drawable/ic_crop_confirm" />
        </LinearLayout>
        
        <!-- Fine rotation slider (Feature #5: Free rotation) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fine Tune:"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                android:paddingEnd="8dp" />
            
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/rotationSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="360"
                android:progress="180" />
            
            <TextView
                android:id="@+id/fineRotationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0°"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                android:paddingStart="8dp"
                android:minWidth="40dp"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
